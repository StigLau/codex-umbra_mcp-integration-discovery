# Codex Umbra Makefile
# High-level operations for The Oracle, The Visage, The Conductor, and The Sentinel
# "Join the fun!" - Management commands for the multi-component system

.PHONY: help start stop restart status test test-all test-quick test-integration build clean install deps lint format check-env oracle-status providers setup docker-build docker-start docker-stop docker-clean logs deploy

# Default target
help: ## üîÆ Show this help message - The Oracle's guidance
	@echo "üåü Codex Umbra - The Oracle's Command Center üåü"
	@echo ""
	@echo "Available commands:"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "  \033[36m%-20s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)
	@echo ""
	@echo "üéØ Quick Start: make setup && make start"
	@echo "üß™ Full Test:   make test-all"
	@echo "üöÄ Production:  make deploy"

# =============================================================================
# Environment Setup
# =============================================================================

check-env: ## üîç Check environment configuration
	@echo "üîç Checking Codex Umbra environment..."
	@if [ ! -f .env ]; then \
		echo "‚ö†Ô∏è  .env file not found. Creating from template..."; \
		cp .env.example .env; \
		echo "‚úÖ Created .env file. Please edit with your API keys."; \
	else \
		echo "‚úÖ .env file exists"; \
	fi
	@echo "üìã Environment status:"
	@if grep -q '^DEFAULT_LLM_PROVIDER=' .env 2>/dev/null; then \
		echo "  ‚úÖ DEFAULT_LLM_PROVIDER: $$(grep '^DEFAULT_LLM_PROVIDER=' .env | cut -d'=' -f2)"; \
	else \
		echo "  ‚ùå DEFAULT_LLM_PROVIDER not set"; \
	fi
	@if grep -q '^ANTHROPIC_API_KEY=.*[^=]$$' .env 2>/dev/null; then \
		echo "  ‚úÖ ANTHROPIC_API_KEY: configured"; \
	else \
		echo "  ‚ö†Ô∏è  ANTHROPIC_API_KEY: not configured"; \
	fi
	@if grep -q '^GEMINI_API_KEY=.*[^=]$$' .env 2>/dev/null; then \
		echo "  ‚úÖ GEMINI_API_KEY: configured"; \
	else \
		echo "  ‚ö†Ô∏è  GEMINI_API_KEY: not configured"; \
	fi

setup: check-env deps ## üõ†Ô∏è Initial project setup - Prepare for The Oracle's awakening
	@echo "üåü Setting up Codex Umbra..."
	@echo "‚úÖ Dependencies installed"
	@echo "‚úÖ Environment configured"
	@echo "üéâ Setup complete! Ready to start The Oracle."

deps: ## üì¶ Install all dependencies
	@echo "üì¶ Installing Python dependencies..."
	@cd conductor_project && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt
	@cd mcp_server_project && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt
	@echo "üì¶ Installing JavaScript dependencies..."
	@cd codex-umbra-visage && npm install
	@echo "‚úÖ All dependencies installed"

# =============================================================================
# Service Management
# =============================================================================

start: check-env ## üöÄ Start all Codex Umbra components
	@echo "üöÄ Awakening The Oracle and all components..."
	@./scripts/start_codex_umbra.sh || docker-compose up -d
	@sleep 3
	@make status

start-dev: ## üîß Start in development mode (local processes)
	@echo "üîß Starting development environment..."
	@./scripts/start_codex_umbra.sh

start-docker: docker-start ## üê≥ Start using Docker Compose

stop: ## üõë Stop all components - The Oracle sleeps
	@echo "üõë Stopping Codex Umbra components..."
	@docker-compose down 2>/dev/null || echo "Docker services stopped"
	@pkill -f "uvicorn.*conductor" 2>/dev/null || echo "Conductor stopped"
	@pkill -f "uvicorn.*sentinel" 2>/dev/null || echo "Sentinel stopped"
	@echo "üí§ The Oracle sleeps. All components stopped."

restart: stop start ## üîÑ Restart all components

status: ## üìä Check status of all components
	@echo "üìä Codex Umbra System Status"
	@echo "============================="
	@./scripts/test_quick_sanity.sh

# =============================================================================
# Docker Operations
# =============================================================================

docker-build: ## üê≥ Build Docker containers
	@echo "üê≥ Building Docker containers..."
	@docker-compose build

docker-start: ## üê≥ Start Docker containers
	@echo "üê≥ Starting Docker containers..."
	@docker-compose up -d
	@sleep 5
	@make status

docker-stop: ## üê≥ Stop Docker containers
	@echo "üê≥ Stopping Docker containers..."
	@docker-compose down

docker-clean: ## üê≥ Clean Docker containers and images
	@echo "üê≥ Cleaning Docker environment..."
	@docker-compose down -v --rmi all 2>/dev/null || true
	@docker system prune -f

# =============================================================================
# Testing
# =============================================================================

test: test-quick ## üß™ Run quick tests (alias for test-quick)

test-quick: ## ‚ö° Quick sanity check - Fast Oracle health check
	@echo "‚ö° Quick Oracle health check..."
	@./scripts/test_quick_sanity.sh

test-basic: ## üî¨ Basic connectivity tests
	@echo "üî¨ Running basic tests..."
	@./scripts/test_basic.sh

test-integration: ## üß© Full integration tests with Oracle
	@echo "üß© Running integration tests..."
	@timeout 120s ./scripts/test_full_integration.sh || echo "‚è∞ Test completed (may have timed out)"

test-oracle: ## üîÆ Test Oracle intelligence and LLM providers
	@echo "üîÆ Testing Oracle intelligence..."
	@./scripts/test_oracle_integration.sh

test-providers: ## ü§ñ Test all LLM providers
	@echo "ü§ñ Testing LLM providers..."
	@make oracle-status
	@echo "Testing Ollama (default)..."
	@curl -X POST http://localhost:8000/api/v1/chat -H "Content-Type: application/json" \
		-d '{"message": "Test Ollama provider", "user_id": "makefile-test"}' -s | jq -r '.response' || echo "‚ùå Ollama test failed"
	@echo "Checking available providers..."
	@curl -s http://localhost:8000/api/v1/llm/providers | jq '.providers[]' 2>/dev/null || echo "‚ö†Ô∏è  Provider endpoint not available"

test-function-calling: ## üîß Test LLM function calling with MCP tools
	@echo "üîß Testing LLM Function Calling..."
	@echo "Available function calling tools:"
	@curl -s http://localhost:8000/api/v1/function-call/tools | jq -r '.tools_documentation' 2>/dev/null || echo "‚ùå Function calling tools not available"
	@echo ""
	@echo "Testing function calling conversation:"
	@curl -X POST http://localhost:8000/api/v1/function-call \
		-H "Content-Type: application/json" \
		-d '{"message": "Check the system health please", "provider": "anthropic"}' \
		-s | jq -C 2>/dev/null || echo "‚ùå Function calling test failed"

test-visage: ## üëÅÔ∏è Test Visage frontend integration
	@echo "üëÅÔ∏è Testing The Visage..."
	@./scripts/test_visage_v2_integration.sh

test-all: test-basic test-integration test-oracle test-function-calling test-visage ## üß™ Run all tests
	@echo "üéâ All tests completed!"

# =============================================================================
# Oracle Operations
# =============================================================================

oracle-status: ## üîÆ Check Oracle and LLM provider status
	@echo "üîÆ Oracle Status Report"
	@echo "======================"
	@echo "Ollama:"
	@curl -s http://localhost:11434/api/tags | jq '.models[]? | .name' 2>/dev/null || echo "  ‚ùå Ollama not available"
	@echo "Conductor:"
	@curl -s http://localhost:8000/health | jq '.status' 2>/dev/null || echo "  ‚ùå Conductor not available"
	@echo "Sentinel:"
	@curl -s http://localhost:8001/health | jq '.status' 2>/dev/null || echo "  ‚ùå Sentinel not available"

providers: oracle-status ## ü§ñ List available LLM providers
	@echo ""
	@echo "ü§ñ Available LLM Providers:"
	@curl -s http://localhost:8000/api/v1/llm/providers 2>/dev/null | jq -r '.providers[]? | "  \(.provider): \(.model) (\(if .available then "‚úÖ Available" else "‚ùå Unavailable" end))"' || echo "  ‚ö†Ô∏è  Unable to fetch providers"

chat: ## üí¨ Interactive chat with The Oracle
	@echo "üí¨ Starting chat with The Oracle..."
	@echo "Type 'exit' to quit"
	@while true; do \
		read -p "You: " message; \
		if [ "$$message" = "exit" ]; then break; fi; \
		echo "üîÆ Oracle:"; \
		curl -X POST http://localhost:8000/api/v1/chat \
			-H "Content-Type: application/json" \
			-d "{\"message\": \"$$message\", \"user_id\": \"makefile-chat\"}" \
			-s | jq -r '.response' 2>/dev/null || echo "‚ùå Failed to reach Oracle"; \
		echo ""; \
	done

# =============================================================================
# Development Tools
# =============================================================================

lint: ## üßπ Lint Python code
	@echo "üßπ Linting Python code..."
	@cd conductor_project && source venv/bin/activate && python -m flake8 app/ --max-line-length=120 || echo "‚ö†Ô∏è  Linting issues found"
	@cd mcp_server_project && source venv/bin/activate && python -m flake8 mcp_server/ --max-line-length=120 || echo "‚ö†Ô∏è  Linting issues found"

format: ## üé® Format Python code
	@echo "üé® Formatting Python code..."
	@cd conductor_project && source venv/bin/activate && python -m black app/ --line-length=120 || echo "‚ö†Ô∏è  Install black for formatting"
	@cd mcp_server_project && source venv/bin/activate && python -m black mcp_server/ --line-length=120 || echo "‚ö†Ô∏è  Install black for formatting"

clean: ## üßΩ Clean build artifacts and caches
	@echo "üßΩ Cleaning build artifacts..."
	@find . -type f -name "*.pyc" -delete
	@find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	@find . -type d -name ".pytest_cache" -exec rm -rf {} + 2>/dev/null || true
	@rm -rf conductor_project/venv 2>/dev/null || true
	@rm -rf mcp_server_project/venv 2>/dev/null || true
	@cd codex-umbra-visage && rm -rf node_modules dist .next 2>/dev/null || true
	@echo "‚úÖ Cleanup complete"

# =============================================================================
# Logging and Monitoring
# =============================================================================

logs: ## üìù Show logs from all components
	@echo "üìù Codex Umbra Logs"
	@echo "=================="
	@docker-compose logs --tail=50 -f 2>/dev/null || echo "Use 'docker-compose logs' for detailed logs"

logs-sentinel: ## üìù Show Sentinel logs
	@docker-compose logs -f codex-sentinel 2>/dev/null || echo "Sentinel not running in Docker"

logs-conductor: ## üìù Show Conductor logs
	@docker-compose logs -f codex-conductor 2>/dev/null || echo "Conductor not running in Docker"

logs-visage: ## üìù Show Visage logs
	@docker-compose logs -f codex-visage 2>/dev/null || echo "Visage not running in Docker"

# =============================================================================
# Deployment
# =============================================================================

build: deps docker-build ## üî® Build all components

deploy: build start test-quick ## üöÄ Deploy complete system
	@echo "üöÄ Codex Umbra deployed successfully!"
	@echo "üåê Access points:"
	@echo "  üëÅÔ∏è  The Visage:   http://localhost:5173"
	@echo "  üéØ The Conductor: http://localhost:8000"
	@echo "  üõ°Ô∏è  The Sentinel:  http://localhost:8001"
	@echo "  üîÆ The Oracle:     http://localhost:11434"
	@make oracle-status

# =============================================================================
# Fun Utilities
# =============================================================================

demo: ## üé≠ Run a demo conversation with The Oracle
	@echo "üé≠ Codex Umbra Demo"
	@echo "=================="
	@echo "üîÆ Oracle: Greetings! I am The Oracle of Codex Umbra."
	@curl -X POST http://localhost:8000/api/v1/chat \
		-H "Content-Type: application/json" \
		-d '{"message": "What is the current system status?", "user_id": "demo"}' \
		-s | jq -r '.response' 2>/dev/null || echo "‚ùå Demo failed - ensure system is running"

demo-function-calling: ## üîß Demo LLM function calling with real system operations
	@echo "üîß Function Calling Demo"
	@echo "======================="
	@echo "ü§ñ Oracle: Demonstrating direct system operations through LLM function calling..."
	@echo ""
	@echo "üîç Available tools:"
	@curl -s http://localhost:8000/api/v1/function-call/tools | jq -r '.tools_documentation' 2>/dev/null | head -10
	@echo ""
	@echo "üéØ Oracle executing real system check:"
	@curl -X POST http://localhost:8000/api/v1/function-call \
		-H "Content-Type: application/json" \
		-d '{"message": "Please check the system health and tell me about any issues", "provider": "anthropic"}' \
		-s | jq -r '.response' 2>/dev/null || echo "‚ùå Function calling demo failed"

version: ## üìã Show version information
	@echo "üîÆ Codex Umbra Version Information"
	@echo "================================="
	@echo "Components: The Oracle, The Visage, The Conductor, The Sentinel"
	@echo "LLM Providers: Ollama (Mistral), Anthropic (Claude), Google (Gemini)"
	@echo "Architecture: Multi-component MCP-enhanced system"
	@git log --oneline -5 2>/dev/null || echo "Git history not available"

fun: ## üéâ The Oracle tells a joke
	@echo "üéâ The Oracle's wisdom includes humor..."
	@curl -X POST http://localhost:8000/api/v1/chat \
		-H "Content-Type: application/json" \
		-d '{"message": "Tell me a programming joke", "user_id": "fun"}' \
		-s | jq -r '.response' 2>/dev/null || echo "ü§ñ Why do programmers prefer dark mode? Because light attracts bugs!"