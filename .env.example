# Codex Umbra Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Default LLM provider (ollama, anthropic, gemini)
DEFAULT_LLM_PROVIDER=ollama

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# Google Gemini API Configuration  
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro-latest
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=60

# =============================================================================
# Service Configuration
# =============================================================================

# Conductor (Backend) Configuration
CONDUCTOR_HOST=0.0.0.0
CONDUCTOR_PORT=8000
CONDUCTOR_DEBUG=false

# Sentinel (MCP Server) Configuration  
SENTINEL_HOST=0.0.0.0
SENTINEL_PORT=8001
SENTINEL_DEBUG=false

# Visage (Frontend) Configuration
VISAGE_PORT=5173
VISAGE_API_BASE_URL=http://localhost:8000

# =============================================================================
# MCP Protocol Configuration
# =============================================================================

# MCP Server Settings
MCP_SERVER_NAME=codex-umbra-sentinel
MCP_SERVER_VERSION=1.0.0
MCP_TIMEOUT=30
MCP_MAX_RETRIES=3

# =============================================================================
# Security & Performance
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Development & Testing
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable/disable features for testing
ENABLE_MOCK_RESPONSES=false
ENABLE_DEBUG_LOGGING=false
ENABLE_METRICS=true

# Test API Keys (use separate keys for testing)
TEST_ANTHROPIC_API_KEY=test_anthropic_key
TEST_GEMINI_API_KEY=test_gemini_key